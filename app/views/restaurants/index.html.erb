<div class="mt-3">
  <ul style="list-style-type: none">
    <% @restaurants.each do |restaurant| %>
      <li><div class="d-flex align-items-center text-decoration-none"><h4><%= link_to restaurant.name , restaurant_path(restaurant) %></h4>  <span style="font-size: 12px" class="pl-3"> |  <%= restaurant.category %></span></div></li>
      <ul style="list-style-type: none; font-size: 14px">
        <li><%= restaurant.address %></li><br>
      </ul>
    <% end %>
  </ul>
</div>